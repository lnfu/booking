<div class="w-full lg:py-10">
  <div class=" lg:w-1/2 lg:mx-auto py-6 px-8 bg-white rounded lg:rounded-3xl">
    <h1 class="text-4xl text-center">個人資料</h1>
    <div class="py-5">
      <%= form_for @user, url: profile_path, method: :patch do |f| %>
        <div class="mb-4">
          <%= f.label :name, "學號", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= f.text_field :name, class: "text-gray-700 shadow appearance-none border rounded w-full py-2 px-3 leading-tight", readonly: true %>
          </div>
        </div>
        <div class="mb-4">
          <%= f.label :email, "電子郵件", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= f.text_field :email, class: "text-gray-700 shadow appearance-none border rounded w-full py-2 px-3 leading-tight ", readonly: true %>
          </div>
        </div>
        <div class="mb-4">
          <%= f.label :nick, "使用者名稱", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= f.text_field :nick, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
        <div class="mb-4">
          <%= f.label :password, "密碼", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
        <%= f.submit "更新", class: "cursor-pointer w-full py-2 block bg-blue-500 rounded text-white" %>
      <% end %>
    </div>
  </div>
</div>
