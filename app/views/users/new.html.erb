<div class="bg-slate-100 flex justify-center items-center">
  <div class="w-1/2 h-[calc(100vh-75px)]  hidden lg:block bg-amber-200">
    <div class="flex items-center justify-center h-full">
      <%= image_tag 'register.png', class: "rounded-xl" ,alt: "Register Meme" %>
    </div>
  </div>
  <div class="w-full lg:w-1/2 px-32">
    <h1 class="text-4xl mb-4">註冊</h1>
    <div class="">
      <%= form_with(model: @user) do |form| %>
        <div class="mb-4">
          <%= form.label :nick, "使用者名稱", class: "block font-bold text-gray-600 mb-1" %>
          <%= form.text_field :nick, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :name, "學號", class: "block font-bold text-gray-600 mb-1" %>
          <%= form.text_field :name, required: true, pattern: "^[a-z0-9]{1,9}$", class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :email, "電子郵件", class: "block font-bold text-gray-600 mb-1" %>
          <%= form.email_field :email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :password, "密碼", class: "block font-bold text-gray-600 mb-1" %>
          <%= form.password_field :password, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :password_confirmation, "確認密碼", class: "block font-bold text-gray-600 mb-1" %>
          <%= form.password_field :password_confirmation, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div>
          <%= form.submit "建立帳號", class: "cursor-pointer w-full py-2 block bg-blue-500 rounded text-white" %>
        </div>
        <% flash.each do |type, msg| %>
          <div class="<%= flash_class(type) %>">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      <p class="text-center my-4"><%= link_to "回到登入頁面", login_path, class: "text-blue-500" %></p>
    </div>
  </div>
</div>