<div class="w-full lg:py-10">
  <div class=" lg:w-1/2 lg:mx-auto py-6 px-8 bg-white rounded lg:rounded-3xl">
    <h1 class="text-4xl text-center">重設密碼</h1>
    <div class="py-5">
      <%= form_with(url: reset_password_path(id: @user.id, token: @token), method: :post) do |form| %>
        <div class="mb-4">
          <%= form.label :password, "密碼", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
        <div class="mb-4">
          <%= form.label :password_confirmation, "確認密碼", class: "block font-bold text-gray-700 mb-1" %>
          <div class="">
            <%= form.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
        <div>
          <%= form.submit "重設密碼", class: "block w-full py-2 my-4 bg-blue-500 text-white rounded cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
