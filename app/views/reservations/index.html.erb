<table class="w-full text-left border-collapse bg-slate-50">
  <thead>
    <tr>
      <th class="px-16 pt-12 pb-2 text-xl">使用者</th>
      <th class="px-16 pt-12 pb-2 text-xl">琴房</th>
      <th class="px-16 pt-12 pb-2 text-xl">日期</th>
      <th class="px-16 pt-12 pb-2 text-xl">時段</th>
      <th class="px-16 pt-12 pb-2 text-xl"></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr class="border-t border-slate-200">
        <td class="px-16 py-2"><%= reservation.user.name %></td>
        <td class="px-16 py-2"><%= reservation.room.name %></td>
        <td class="px-16 py-2"><%= "#{reservation.time_slot.start_at.strftime("%I:%M %p")} - #{reservation.time_slot.end_at.strftime("%I:%M %p")}" %></td>
        <td class="px-16 py-2"><%= reservation.date %></td>
        <td class="px-16 py-2"></td>
      </tr>
    <% end %>
  </tbody>
</table>
