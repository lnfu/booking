<%= form_with(model: time_slot) do |form| %>
  <div class="mb-4">
    <%= form.label :name, "名稱", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :start_at, "開始時間", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.time_field :start_at, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :end_at, "結束時間", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.time_field :end_at, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.submit "確定", class: "bg-blue-500 px-3 py-2 rounded text-white" %>
  </div>
<% end %>
