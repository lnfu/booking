<div class="bg-slate-100 flex justify-center items-center">
  <div class="w-7/12 h-[calc(100vh-75px)] hidden lg:block">
    <%= image_tag 'login.jpg', class: "object-cover w-full h-full" ,alt: "Login Meme" %>
  </div>
  <div class="w-full lg:w-5/12 px-32">
    <h1 class="text-4xl mb-4">登入</h1>
    <div class="">
      <%= form_tag "/login" do %>
        <%= hidden_field_tag(:login_method, 'password') %>
        <div class="mb-4">
          <%= label_tag :name, "學號", class: "block font-bold text-gray-600 mb-1" %>
          <%= text_field_tag :name, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= label_tag :password, "密碼", class: "block font-bold text-gray-600 mb-1" %>
          <%= password_field_tag :password, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div>
          <%= submit_tag "登入", class: "cursor-pointer w-full py-2 block bg-blue-500 rounded text-white" %>
        </div>
        <% flash.each do |type, msg| %>
          <div class="<%= flash_class(type) %>">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      <p class="text-center text-gray-400 my-4">或是用單一入口登入</p>
      <%= button_to(
      "使用 NYCU 單一入口登入/註冊", 
    login_path, method: :post, 
    params: { login_method: 'oauth' },
    data: {turbo: "false"}, 
    class: "cursor-pointer w-full py-2 block bg-purple-500 rounded text-white"
  ) %>
    </div>
    <div class="w-full">
      <p class="text-center text-gray-400 my-4">還沒有帳號？<%= link_to "立即註冊", new_user_path, class: "text-blue-500" %></p>
    </div>
  </div>
</div>