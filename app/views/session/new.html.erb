<div>
  <h1 class="text-4xl">登入</h1>
  <div class="py-5">
    <%= form_tag "/login" do %>
      <%= hidden_field_tag(:login_method, 'password') %>
      <div class="mb-4">
        <%= label_tag :name, "學號", class: "block font-bold text-gray-700 mb-1" %>
        <%= text_field_tag :name, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= label_tag :password, "密碼", class: "block font-bold text-gray-700 mb-1" %>
        <%= password_field_tag :password, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div>
        <%= submit_tag "登入", class: "w-full block bg-blue-500 w-96 py-2 rounded text-white" %>
      </div>
      <% flash.each do |type, msg| %>
        <div class="<%= flash_class(type) %>">
          <%= msg %>
        </div>
      <% end %>
    <% end %>
    <p class="text-center text-gray-400 my-4">或是用單一入口登入</p>
    <%= button_to(
      "使用 NYCU 單一入口登入/註冊", 
    login_path, method: :post, 
    params: { login_method: 'oauth' },
    data: {turbo: "false"}, 
    class: "bg-purple-500 w-96 py-2 rounded text-white mb-2"
  ) %>
  </div>
  <div>
    <%= link_to "還沒有帳號？立即註冊", new_user_path, class: "text-blue-500" %>
  </div>
</div>
