<%= form_with(model: room) do |form| %>
  <div class="mb-4">
    <%= form.label :name, "名稱", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, "門鎖密碼", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.text_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :color, "顏色", class: "block font-bold text-gray-700 mb-1" %>
    <%= form.text_field :color, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.submit "確定", class: "cursor-pointer w-full py-2 block bg-blue-500 rounded text-white" %>
  </div>
<% end %>
