<div class="w-full lg:py-10">
  <div class=" lg:mx-32 py-2 px-2 lg:py-12 lg:px-16 bg-white rounded lg:rounded-3xl">
    <table class="w-full table-fixed text-left border-collapse">
      <thead>
        <tr>
          <th class="pb-4 text-xl">琴房</th>
          <th class="pb-4 text-xl">門鎖密碼</th>
          <th class="pb-4 text-xl">顏色</th>
          <th class="pb-4 text-xl"></th>
        </tr>
      </thead>
      <tbody>
        <% if current_user&.admin? %>
          <tr>
            <td colspan="4"><%= link_to "新增房間", new_room_path, class: "text-blue-500"%></td>
          </tr>
        <% end %>
        <% @rooms.each do |room| %>
          <tr class="border-t border-slate-200">
            <td class="py-2"><%= room.name %></td>
            <td class="py-2"><%= room.password %></td>
            <td class="py-2"><%= room.color %></td>
            <td class="py-2 text-right">
              <% if current_user&.admin? %>
                <div class="flex flex-col lg:flex-row">
                  <%= 
                    link_to "編輯", 
                    edit_room_path(room),
                    class: "block w-14 px-3 py-2 rounded bg-blue-500 text-white"
                  %>
                  <%= 
                    link_to "刪除", 
                    room, 
                    method: :delete,
                    data: { turbo_method: :delete, turbo_confirm: "確定刪除？" },
                    class: "block w-14 px-3 py-2 rounded bg-red-500 text-white"
                  %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>